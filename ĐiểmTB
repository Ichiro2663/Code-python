def main():
    # Nhập tên học sinh từ người dùng
    ten_hocsinh = input("Nhập vào Họ và Tên: ")

    # Nhập điểm các môn học
    diem_toan = float(input("Nhập vào điểm môn Toán: "))
    diem_van = float(input("Nhập vào điểm môn Văn: "))
    diem_anh = float(input("Nhập vào điểm Anh: "))

    # Tính điểm trung bình
    diem_trung_binh = (diem_toan + diem_van + diem_anh) / 3

    # In ra kết quả, hiển thị điểm trung bình với 2 chữ số thập phân
    print(f"Học sinh {ten_hocsinh} đạt điểm TB các môn là: {diem_trung_binh:.2f}")

# Nếu file đang được chạy (không phải import), thực thi hàm main
if __name__ == "__main__":
    main()
